<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:id="@+id/currLoc"
    android:text="Current location"
    />
    <TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <Button android:text="Change Current Location" android:id="@+id/changeCurrLoc" android:layout_width="match_parent" android:layout_height="wrap_content"></Button>
  	</TableRow>
  	
    <TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
	<Button android:layout_height="wrap_content" android:id="@+id/scanButton" android:layout_width="wrap_content" android:text="Scan Sensors"></Button>
	</TableRow>
	
	<ListView android:id="@+id/listView" android:layout_height="match_parent" android:layout_width="match_parent"></ListView>
</LinearLayout>


